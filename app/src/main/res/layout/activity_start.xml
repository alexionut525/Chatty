<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.alexspataru.chatty.StartActivity">


    <ImageView
        android:id="@+id/name_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/logo_official"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_app"
        android:layout_marginStart="128dp"
        android:background="@color/transparent"
        android:text="WELCOME"
        android:textColor="#7F4AF3"
        android:textSize="39sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/welcome"
        android:id="@+id/on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:background="@color/transparent"
        android:text="on"
        android:textColor="#7F4AF3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/on"
        android:id="@+id/chatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:background="@color/transparent"
        android:text="Chatie"
        android:textColor="#5427E6"
        android:textSize="37sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatie"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_round"
        android:padding="10dp"
        android:text="Let's get started"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button"
        android:text="Already have account? Log In"
        android:textColor="#FFFF"
        android:textSize="13sp" />


</RelativeLayout>